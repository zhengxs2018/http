# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
indent_size = 2
indent_style = space
indent_size = 2
end_of_line = lf
tab_width = 2
continuation_indent_size = 4 # IntelliJ family IDEs
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false
